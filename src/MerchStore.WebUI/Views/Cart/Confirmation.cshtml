@using System.Text.Json
@{
    ViewData["Title"] = "Order Confirmation";

    var orderJson = TempData["OrderSummary"] as string;
    var orderItems = string.IsNullOrEmpty(orderJson)
        ? new List<OrderSummaryItem>()
        : JsonSerializer.Deserialize<List<OrderSummaryItem>>(orderJson) ?? new List<OrderSummaryItem>();

    var message = TempData["Message"] as string ?? "Your order has been placed.";
    var totalAmount = orderItems.Sum(i => i.TotalPrice);
}

<div class="text-center mt-4">
    <h2>üéâ Checkout Complete</h2>
    <p class="lead">@message</p>
</div>

@if (!orderItems.Any())
{
    <div class="alert alert-info text-center">
        No order summary available.
    </div>
}
else
{
    <table class="table table-bordered mt-4">
        <thead class="table-light">
            <tr>
                <th>Product</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in orderItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="fw-bold">
                <td colspan="3" class="text-end">Total:</td>
                <td>@totalAmount.ToString("C")</td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center mt-4">
        <a class="btn btn-primary" asp-controller="Catalog" asp-action="Index">üõç Continue Shopping</a>
    </div>
}
