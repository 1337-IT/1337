<form asp-action="Checkout" method="post" class="mt-4">
    <!-- Existing fields ... -->

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="CardNumber" class="form-label">Card Number</label>
            <input asp-for="CardNumber" class="form-control" maxlength="19" />
            <span asp-validation-for="CardNumber" class="text-danger" />
        </div>
        <div class="col-md-3">
            <label asp-for="ExpiryDate" class="form-label">Expiry Date (MM/YY)</label>
            <input asp-for="ExpiryDate" class="form-control" maxlength="5" placeholder="MM/YY" />
            <span asp-validation-for="ExpiryDate" class="text-danger" />
        </div>
        <div class="col-md-3">
            <label asp-for="CVV" class="form-label">CVV</label>
            <input asp-for="CVV" class="form-control" maxlength="4" />
            <span asp-validation-for="CVV" class="text-danger" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit Order</button>
</form>
